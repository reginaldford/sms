#!/usr/local/bin/sms
# Asks for a value x, and puts the factorial of x
# Repeats continually until the user closes by signal
{
  let fac =1;
  let x = 1;

  let factorial= counter => {
    fac = 1;
    while( counter > 0 ) {
      fac = fac * counter;
      counter = counter -1
    };
    fac;
  };

  while(true){
    put("Enter x: ");
    x = parse(input());
    putln("The factorial of " str+ toStr(x)  str+ " is " str+
      toStr(factorial(x)));
  };
};
