#!/usr/local/bin/sms
# Asks for a value x, and puts the factorial of x
# Repeats continually until the user closes by signal

factorial=(counter)=>(
  let fac = 1;
  while( counter > 0, (
    fac = fac * counter;
    counter = counter -1
  ));
  fac
);

while(true,(
  put("Enter x: ");
  let x = parse(input());
  putln("The factorial of x is " str+
    toStr(factorial(x)))
));
