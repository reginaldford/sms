#!/usr/local/bin/sms -q
# Lists all files in directories in the current working directory
# Tells if it's a directory or file, though many other things appear as files
{
  let list = ls();
  let i=0;
  while(i<size(list[0]),{
    putln(list[0][i] str+ " is a "
      str+
        if(list[1][i])
          "directory"
        else
          "file" str+ ".");
    i=i+1
  });
};
