//Simply prints the time every second

// Represents a number from 0 to 99
// with 2 characters.
two_digits=(x)=>(
  if(x<10,
    str+("0",to_str(x)),
    to_str(x)
  )
);

// Print the time with constant width
while(true,(
  d = date();
  // Convert military time to 12-hr
  if(d[2]>12,
    print(two_digits(d[2]-12)),
    print(two_digits(d[2])));  
  print(":");
  print(two_digits(d[1]));
  print(":");
  print(two_digits(d[0]) str+ "\n");
  sleep(1000)
));
