#!/usr/local/bin/sms -q
# Demonstrates fnSetParent
# fnSetParent sets the parent scope of a context,
# overriding the lexical scope.
{
  # Build a cx for the function to live
  let env = {counter -> 0};
  # Build a function
  let f = ( ) => counter = counter + 1;
  # Change the parent from self to env
  fnSetParent(f,env);
  # Run f 10 times
  let i = 0;
  while (i < 10) {
    putln(toStr(f()));
    i = i + 1;
  };
  # Show the env cx
  putln(toStr(env));
};
